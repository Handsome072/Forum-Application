<div class="container  background pb-5">
  <div class="row  p-3 pt-0  ">
    <div class="col-lg-12 left ">
    <div>
        <div class=" row mb-3 bg-question-user">
          <div class="col-lg-2 user text-center p-3">
            <img src="/images/<%= question.avatar %>" class="img-fluid text-center" width="120" height="130px">
            <p class="username">
              <%= question.username %>
            </p>
            <p class="answer-category">Categorie: <span>
                <%= question.category %>
              </span> </p>
          </div>

          <div class="col-lg-10 pt-4 pb-3 ps-5 pe-5">

            <h4 class="question-user">
              <%= question.question %>
            </h4>
            <p class="time-question">
              <%= question.createdAt.toLocaleString() %>
            </p>
            <p class="mt-5 question-description-answer ">
              <%= question.description %>
            </p>



          </div>
        </div>
        <% question.answers.forEach((answer)=> { %>
          <div class=" row bg-answer mt-3">

            <div class="col-lg-2 user text-center ">
              <img src="/images/<%= answer.avatar %>" class="img-fluid rounded-pill text-center " width="120"
                height="130px">

              <p class="username">
                <%= answer.username %>
              </p>

            </div>

            <div class="col-lg-10  right-bg-answer ">

              <p class="time mb-5">
                <%= answer.createdAt %>
              </p>
              <p class="question_answer ">
                <%= answer.content %>
              </p>
              <div class="row mt-4 pt-4  ">
                <div class="col-lg-2 me-1 text-center user-reply ">
                  <i class="fa fa-wechat fw-bold ">Commenter</i>
                </div>
                <div class="col-lg-2    ">
                  <div class="row ">
                    <div class="col-lg-4 text-center user-reply   voter" data-answer-id="<%= answer.answerId %>">
                       <i class="fa fa-thumbs-up fw-bold"></i> </div>
                    <div class="col-lg-2   p-0   vote-number"> <span class="    fw-bold">
                        <%= answer.voter %>
                      </span></div>
                    <div class="col-lg-4 text-center user-reply devoter" data-answer-id="<%= answer.answerId %>"><i class="fa fa-thumbs-down fw-bold  "> </i> </div>
                    <div class="col-lg-2   p-0   vote-number"> <span class="    fw-bold">
                      <%= answer.devoter %>
                    </span></div>
                  </div>

                </div>
                <div class="col-lg-5"></div>

                <div class="col-lg-2  float-end  ">
                  <span class="fw-bold vote-user">
                    <%= answer.voter %> voter
                  </span>
                </div>


              </div>

           


              </div>



          

          </div>
          <% }) %>
        </div>
      </div>

    </div>
 
  </div>





<div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered ">
    <div class="modal-content  modal-answer">
      <div class="modal-header">
        <h5 class="modal-title " id="exampleModalLabel">Votre Commentaire</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">

        <form method="POST" action="/answers" enctype="multipart/form-data">
          <input type="hidden" name="questionId" value="<%= question.questionId %>">

          <div class="mb-3">
            <label for="recipient-name " class="col-form-label ">Nom</label>
            <input type="text" class="form-control" name="username" id="recipient-name" required>
          </div>
          <div class="mb-3">
            <label for="recipient-profile " class="col-form-label ">Votre Profile</label>
            <input type="file" accept="image/*" name="avatar" id="recipient-pofile" class="form-control">

          </div>

          <div class="mb-3">
            <label for="message-text " class="col-form-label ">Commentaire:</label>
            <textarea class="form-control" name="content" id="message-text" rows="5" required></textarea>
          </div>
          <div class="modal-footer">
            <button type=" button submit" class="btn btn-primary">Envoyer</button>
          </div>

        </form>
      </div>

    </div>
  </div>
</div>