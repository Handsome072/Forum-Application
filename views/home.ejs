<div class="container background">

  <div class="row">
    <div class="col-lg-9 left mt-3">
      <% if (questions.length> 0) { %>

        <% for(let item of questions){ %>
          <div class="bg-question mt-3 p-3">
            <div class=" row p-3">
              <div class="col-lg-2 test">
                <img src="/images/<%= item.avatar %>" class="img-fluid" width="120" height="130px">
              </div>
              <div class="col-lg-10 ps-4">
                <div class="bg-danger">
                  <a href="/questions/<%= item.questionId %>" class="float-start question-user ">
                    <%= item.question %>
                  </a>
                  <form action="/questions/<%= item.questionId %>/delete" method="post">
                    <input type="hidden" name="questionId" value="<%= item.questionId %>">

                    <button type="submit" class="float-end delete"> <span class="fa fa-trash"></span></button>
                  </form>


                </div>


                <p class="mt-5 question-description-home">
                  <%= item.description %>
                </p>
                <div>
                  <span class=" note-question ">
                    <%= item.username %>
                  </span>
                  <span class="note-question">
                    |
                  </span>
                  <span class="note-question category">
                    <%= item.category %>
                  </span>
                  <span class="note-question">
                    |
                  </span>
                  <span class="note-question">
                    <%= item.createdAt.toLocaleString() %>
                   </span>

                </div>


              </div>

            </div>
          </div>
          <% } %>
            <% } else { %>
              <p class="ms-3">Pas de question.</p>
              <% } %>







    </div>
    <div class="col-lg-3 right  mt-4 p-3">
  
      <form action="/searchQ" method="GET" class="d-flex  ">
        <input class="form-control me-2" type="search" name="q" placeholder="Rechercher ..." aria-label="Search">
        <button  type="submit" class="btn btn-outline-success"><i class="fa fa-search"></i></button>
      </form>


      <h2 class="title mt-4">NEVER MISS GREAT FORUM </h2>
      <img src="/images/Subscribe.png" class="img-fluid  mt-3" alt="">
      <img src="/images/request_app.png" class="img-fluid mt-3" alt="">



      <h2 class="title ">ADVERTISSEMENT </h2>
      <img src="/images/block.png" class="img-fluid w-100 p-2">

      <h2 class="title mt-5">JOIN OUR EMAIL </h2>
      <p>we sure will let you know every time we post something new here.
        enter your email for notifications and join thousands other subscribers.</p>
      
        <form class="d-flex  ">
          <input class="form-control me-2" type="search" placeholder="Your email..." aria-label="Search">
          <button class="btn btn-outline-success" type="submit">Envoyer</button>
        </form>
      
  

    </div>

